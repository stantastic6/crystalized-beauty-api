{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "types": [],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "importHelpers": true,
    "outDir": "./lib",
    "lib": ["es2017", "dom"]
  },
  "include": ["./src/**/*.ts", "./gql/**/*.ts"],
  "exclude": ["node_modules"]
}
